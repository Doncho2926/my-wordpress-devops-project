global:
  scrape_interval: 15s         # колко често да събира метрики (по подразбиране е 1m)
  evaluation_interval: 15s     # колко често да изчислява правила и alerts (ако имаш)

# ---------------------------------------------------------------------
# Това е списъкът на „jobs“ — всяка услуга, от която Prometheus събира данни
# ---------------------------------------------------------------------
scrape_configs:
  # Самият Prometheus
  - job_name: 'prometheus'
    static_configs:
      - targets: ['prometheus:9090']

  # Node Exporter – системни метрики (CPU, RAM, Disk, Network)
  - job_name: 'node_exporter'
    static_configs:
      - targets:
          # Ако си на Linux и няма host.docker.internal,
          # можеш да замениш това с IP адреса на хоста:
          - 'host.docker.internal:9100'

  # cAdvisor – контейнери (Docker, CPU/RAM per container)
  - job_name: 'cadvisor'
    static_configs:
      - targets: ['cadvisor:8080']

  # MySQL Exporter – база данни (queries, connections, cache hit ratio)
  - job_name: 'mysql'
    static_configs:
      - targets: ['mysqld_exporter:9104']

  # NGINX Exporter – уеб сървър (active connections, requests/sec)
  - job_name: 'nginx'
    static_configs:
      - targets: ['nginx_exporter:9113']
