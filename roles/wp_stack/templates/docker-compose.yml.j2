version: "3.8"

services:
  db:
    image: mysql:8.0
    container_name: my-wordpress-devops-project_db
    restart: always
    environment:
      MYSQL_DATABASE: wp
      MYSQL_USER: wp
      MYSQL_PASSWORD: StrongDBpass!
      MYSQL_ROOT_PASSWORD: StrongDBpass!
    volumes:
      - db_data:/var/lib/mysql
    healthcheck:
      test: ["CMD-SHELL", "mysqladmin ping -h 127.0.0.1 -pStrongDBpass! --silent"]
      interval: 10s
      timeout: 5s
      retries: 10
    networks:
      - wp_net

  wordpress:
    image: wordpress:latest
    container_name: my-wordpress-devops-project_wordpress
    depends_on:
      db:
        condition: service_healthy
    restart: always
    environment:
      WORDPRESS_DB_HOST: db:3306
      WORDPRESS_DB_NAME: wp
      WORDPRESS_DB_USER: wp
      WORDPRESS_DB_PASSWORD: StrongDBpass!
    volumes:
      - wordpress_data:/var/www/html
    networks:
      - wp_net

  nginx:
    image: nginx:alpine
    container_name: my-wordpress-devops-project_nginx
    depends_on:
      - wordpress
    ports:
      - "8000:80"
    volumes:
      - wordpress_data:/var/www/html:ro
    networks:
      - wp_net

  node_exporter:
    image: prom/node-exporter:latest
    container_name: my-wordpress-devops-project_node_exporter
    restart: always
    ports:
      - "9100:9100"
    networks:
      - wp_net

  cadvisor:
    image: gcr.io/cadvisor/cadvisor:latest
    container_name: my-wordpress-devops-project_cadvisor
    restart: always
    ports:
      - "8081:8080"
    volumes:
      - /:/rootfs:ro
      - /var/run:/var/run:ro
      - /sys:/sys:ro
      - /var/lib/docker/:/var/lib/docker:ro
    networks:
      - wp_net

  mysqld_exporter:
    image: prom/mysqld-exporter:latest
    container_name: my-wordpress-devops-project_mysqld_exporter
    restart: always
    environment:
      DATA_SOURCE_NAME: "exporter:StrongDBpass!@(db:3306)/"
    ports:
      - "9104:9104"
    depends_on:
      - db
    networks:
      - wp_net

  prometheus:
    image: prom/prometheus:latest
    container_name: my-wordpress-devops-project_prometheus
    restart: always
    volumes:
      - ./prometheus.yml:/etc/prometheus/prometheus.yml:ro
    ports:
      - "9090:9090"
    networks:
      - wp_net

  grafana:
    image: grafana/grafana:latest
    container_name: my-wordpress-devops-project_grafana
    restart: always
    ports:
      - "3000:3000"
    environment:
      GF_SECURITY_ADMIN_USER: admin
      GF_SECURITY_ADMIN_PASSWORD: grafana
    networks:
      - wp_net
    depends_on:
      - prometheus

volumes:
  db_data:
  wordpress_data:

networks:
  wp_net:
