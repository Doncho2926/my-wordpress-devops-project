services:
  db:
    image: "{{ mysql_image | default('mysql:8.0') }}"
    container_name: "{{ project_name }}_db"
    restart: always
    environment:
      MYSQL_DATABASE: "{{ wp_db_name | default('wp') }}"
      MYSQL_USER: "{{ wp_db_user | default('wp') }}"
      MYSQL_PASSWORD: "{{ vault_wp_db_password | default('StrongDBpass!') }}"
      MYSQL_ROOT_PASSWORD: "{{ vault_wp_db_password | default('StrongDBpass!') }}"
    volumes:
      - db_data:/var/lib/mysql
    healthcheck:
      test: ["CMD-SHELL", "mysqladmin ping -h 127.0.0.1 -p{{ vault_wp_db_password | default('StrongDBpass!') }} --silent"]
      interval: 10s
      timeout: 5s
      retries: 10
    networks:
      - wp_net

  wordpress:
    image: "my-wordpress:php8.2-fpm"
    container_name: "{{ project_name }}_wordpress"
    depends_on:
      db:
        condition: service_healthy
    restart: always
    environment:
      WORDPRESS_DB_HOST: "db:3306"
      WORDPRESS_DB_NAME: "{{ wp_db_name | default('wp') }}"
      WORDPRESS_DB_USER: "{{ wp_db_user | default('wp') }}"
      WORDPRESS_DB_PASSWORD: "{{ vault_wp_db_password | default('StrongDBpass!') }}"
    volumes:
      - wordpress_data:/var/www/html
      - ./wp-config.php:/var/www/html/wp-config.php
      - ./php.ini:/usr/local/etc/php/conf.d/zz-uploads.ini
    networks:
      - wp_net

  nginx:
    image: "{{ nginx_image | default('nginx:alpine') }}"
    container_name: "{{ project_name }}_nginx"
    depends_on:
      - wordpress
    ports:
      - "{{ port_http | default('8000') }}:80"
    volumes:
      - ./nginx.conf:/etc/nginx/conf.d/default.conf:ro
      - wordpress_data:/var/www/html:ro
    networks:
      - wp_net

  # -----------------------------
  # Monitoring stack
  # -----------------------------

  prometheus:
    image: prom/prometheus:latest
    container_name: "{{ project_name }}_prometheus"
    volumes:
      - ./prometheus.yml:/etc/prometheus/prometheus.yml:ro
    command:
      - "--config.file=/etc/prometheus/prometheus.yml"
    ports:
      - "{{ prometheus_port | default('9090') }}:9090"
    networks:
      - wp_net

  cadvisor:
    image: gcr.io/cadvisor/cadvisor:latest
    container_name: "{{ project_name }}_cadvisor"
    volumes:
      - /:/rootfs:ro
      - /var/run/docker.sock:/var/run/docker.sock:ro
      - /sys:/sys:ro
      - /var/lib/docker/:/var/lib/docker:ro
    ports:
      - "{{ cadvisor_port | default('8081') }}:8080"
    networks:
      - wp_net

  grafana:
    image: grafana/grafana:latest
    container_name: "{{ project_name }}_grafana"
    depends_on:
      - prometheus
    environment:
      GF_SECURITY_ADMIN_USER: "{{ gf_admin_user | default('admin') }}"
      GF_SECURITY_ADMIN_PASSWORD: "{{ gf_admin_password | default('admin') }}"
    ports:
      - "{{ grafana_port | default('3000') }}:3000"
    networks:
      - wp_net

volumes:
  db_data:
  wordpress_data:

networks:
  wp_net:
