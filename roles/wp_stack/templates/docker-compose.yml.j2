version: '3.8'

services:
  db:
    image: "{{ mysql_image }}"
    container_name: "{{ project_name }}_db"
    restart: always
    environment:
      MYSQL_DATABASE: "{{ wp_db_name }}"
      MYSQL_USER: "{{ wp_db_user }}"
      MYSQL_PASSWORD: "{{ vault_wp_db_password }}"
      MYSQL_ROOT_PASSWORD: "{{ vault_wp_db_password }}"
    volumes:
      - db_data:/var/lib/mysql
    healthcheck:
      test: ["CMD-SHELL", "mysqladmin ping -h 127.0.0.1 -p{{ vault_wp_db_password }} --silent"]
      interval: 10s
      timeout: 5s
      retries: 10
    networks:
      - wp_net

  wordpress:
    image: "my-wordpress:php8.2-fpm"    # üëà –ò–∑–ø–æ–ª–∑–≤–∞–º–µ –≤–µ—á–µ –±–∏–ª–¥–Ω–∞—Ç–∏—è –æ—Ç Ansible –æ–±—Ä–∞–∑
    container_name: "{{ project_name }}_wordpress"
    depends_on:
      db:
        condition: service_healthy
    restart: always
    environment:
      WORDPRESS_DB_HOST: "db:3306"
      WORDPRESS_DB_NAME: "{{ wp_db_name }}"
      WORDPRESS_DB_USER: "{{ wp_db_user }}"
      WORDPRESS_DB_PASSWORD: "{{ vault_wp_db_password }}"
    volumes:
      - wordpress_data:/var/www/html
      - ./wp-config.php:/var/www/html/wp-config.php
    networks:
      - wp_net

  nginx:
    image: "{{ nginx_image }}"
    container_name: "{{ project_name }}_nginx"
    depends_on:
      - wordpress
    ports:
      - "{{ port_http | default('8000') }}:80"
    volumes:
      - ./nginx.conf:/etc/nginx/conf.d/default.conf:ro
      - wordpress_data:/var/www/html:ro
    networks:
      - wp_net

volumes:
  db_data:
  wordpress_data:

networks:
  wp_net:
